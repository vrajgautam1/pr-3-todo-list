<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>TodoList Homepage - Create tasks</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.3/font/bootstrap-icons.min.css"
        integrity="sha512-dPXYcDub/aeb08c63jRq/k6GaKccl256JQy/AnOq7CAnEZ9FzSL9wSbcZkMp4R26vBsMLFYH4kQ67/bbV8XaCQ=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/css/styles.css">

</head>

<body>

    <div class="container">
        <%- include("./partials/header.ejs") %>

            <main>
                <form method="POST" action="/">
                    <div class="mb-3">
                        <label for="task" class="form-label">Create Task</label>
                        <input type="text" class="form-control" id="task" name="task">
                        <input type="hidden" class="form-control" id="id" name="id" value="<%= Date.now() %>">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </main>

            <table class="table">
                <caption class="caption-top">List of tasks</caption>
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Task</th>
                        <th>Action</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% let count=1; %>
                        <% taskList.forEach((user)=> { %>
                            <tr class="<%= user.status === 'Completed' ? 'completedRow' : '' %>">
                                <td>
                                    <%= count %>
                                </td>
                                <td>
                                    <%= user.task %>
                                </td>
                                <td>
                                    <a href="/complete/<%= user.id %>" class="btn btn-success">Mark as completed</a>
                                    <a href="/edit/<%= user.id %>" class="btn btn-warning ">Edit</a>
                                    <a href="/delete/<%= user.id %>" class="btn btn-danger <%= user.status === 'Completed' ? 'text-danger' : '' %>">Delete</a>
                                </td>
                                <td class="<%= user.status === 'Completed' ? 'text-success':'text-danger'%>">
                                    <%= user.status %> <i class="bi bi-check-lg fs-5"></i>
                                </td>
                            </tr>
                            <% count++; %>
                                <% }); %>
                </tbody>

            </table>


    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>

    <script>

    </script>
</body>

</html>